{
    "manifest_version": 2,
    "name": "image tab downloader",
    "version": "1.0",
    "description": "Extension to download images of tabs on which images are displayed",
    "permissions": ["tabs", "downloads"],
    "icons": {
        "48": "icons/icon.svg"
    },
    "browser_action": {
        "default_icon": "icons/icon.svg",
        "default_title": "image tab downloader",
        "default_popup": "popup/popup.html"
    }
}